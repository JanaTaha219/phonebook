    <style>
        body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        min-height: 100vh;
        overflow-x: hidden;
        }

        /* Sidebar Styles */
        .main-sidebar {
        width: 250px;
        position: fixed;
        height: 100%;
        left: 0;
        top: 0;
        background-color: #ffffff;
        color: #333;
        transition: width 0.3s ease;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .brand-link {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #ffffff;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease;
        }

        .brand-image {
        max-height: 50px;
        display: block;
        height: auto;
        margin: 0 auto;
        transition: transform 0.3s ease;
        }

        .brand-link:hover .brand-image {
        transform: scale(1.1);
        }

        .sidebar {
        padding: 20px 10px;
        font-size: 16px;
        height: calc(100% - 60px);
        overflow-y: auto;
            color: #005E66 !important;
        }

        .user-panel {
        margin-bottom: 20px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        }

        .user-panel .info a {
        color: #333;
        font-size: 14px;
        text-decoration: none;
        display: block;
        }

        .nav-sidebar {
        list-style: none;
        padding: 0;
        margin: 0;
        }

        .nav-sidebar li a {
        color: #333;
        text-decoration: none;
        display: flex;
        align-items: center;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
        }

        .nav-sidebar li a:hover {
        background-color: #e9ecef;
        color: #007bff;
        transform: translateX(5px);
        }

        .nav-sidebar .active > a {
        background-color: #3c8dbc;
        color: #ffffff;
        }

        .nav-sidebar .nav-treeview {
        margin-left: 20px;
        display: none;
        }

        .nav-sidebar .nav-treeview li a {
        font-size: 13px;
        padding-left: 30px;
        }

        .nav-sidebar li a .nav-icon,
        .nav-sidebar li a svg {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        transition: transform 0.3s ease;
        }

        .nav-sidebar li a:hover .nav-icon {
        transform: scale(1.1);
        }

        /* Collapsed State */
        .main-sidebar.collapsed {
        width: 60px;
        }

        .main-sidebar.collapsed .brand-image {
        max-height: 40px;
        transition: all 0.3s ease;
        }

        .main-sidebar.collapsed .nav-sidebar li a {
        justify-content: center;
        padding: 10px;
        }

        .main-sidebar.collapsed .nav-icon {
        margin-right: 0;
        }

        .main-sidebar.collapsed .nav-sidebar li a p,
        .main-sidebar.collapsed .nav-sidebar li a i.fas.fa-angle-left.right,
        .main-sidebar.collapsed .nav-treeview {
        display: none;
        }

        /* Main Content */
        .main-content {
        margin-left: 250px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        width: calc(100% - 250px);
        transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .main-sidebar.collapsed + .main-content {
        margin-left: 60px;
        width: calc(100% - 60px);
        }
    </style>
</head>
