@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="background-color: #005E66; direction: rtl;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <label class="nav-link text-white" asp-area="Identity" title="إدارة">مرحباً @User.Identity?.Name!</label>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">تسجيل الخروج</button>
            </form>
        </li>
    }
    else
    {
        @* <li class="nav-item"> *@
        @*     <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">تسجيل</a> *@
        @* </li> *@
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
        </li>
    }
</ul>
