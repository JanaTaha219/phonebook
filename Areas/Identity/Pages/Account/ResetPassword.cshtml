@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}

<style>
    .primary-color {
        color: #005E66;
    }

    .btn-primary {
        background-color: #005E66;
        border-color: #005E66;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #007A85;
            border-color: #007A85;
        }

    .form-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }


    .input-icon {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .password-toggle {
        position: absolute;
        left: 35px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }
</style>

<div class="container" dir="rtl">
    <div class="form-container">
        <h1 class="primary-color text-center mb-4">@ViewData["Title"]</h1>
        <h2 class="h5 text-muted text-center mb-5">إعادة تعيين كلمة المرور الخاصة بك</h2>

        <form method="post" style="direction:rtl; justify-content:right; align-content:start; align-items:start;">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-4 position-relative">
                <input asp-for="Input.Email" class="form-control py-3"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="البريد الإلكتروني"
                       style="justify-content:start; direction:ltr;" />
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <i class="fas fa-envelope input-icon"></i>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>


            <div class="form-floating mb-4 position-relative">
                <input asp-for="Input.Password" type="password" class="form-control py-3"
                       class="form-control py-3 ps-5"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="كلمة المرور الجديدة"
                       style="justify-content:start; direction:ltr;" />
                <label asp-for="Input.Password" class="form-label">كلمة المرور الجديدة</label>
                <i class="fas fa-lock input-icon"></i>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4 position-relative">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control py-3"
                       class="form-control py-3 ps-5"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="تأكيد كلمة المرور"
                       style="justify-content:start; direction:ltr;" />
                <label asp-for="Input.ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                <i class="fas fa-lock input-icon"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary py-3">
                إعادة التعيين
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        // Add password visibility toggle
        document.querySelectorAll('.fa-lock').forEach(icon => {
            icon.addEventListener('click', function() {
                const input = this.parentElement.querySelector('input');
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                this.classList.toggle('fa-eye-slash');
            });
        });
    </script>
}