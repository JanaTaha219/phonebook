@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "هل نسيت كلمة المرور؟";
}

<style>
    .primary-color {
        color: #005E66;
    }

    .btn-primary {
        background-color: #005E66;
        border-color: #005E66;
    }

        .btn-primary:hover {
            background-color: #007A85;
            border-color: #007A85;
        }

    .form-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .input-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }
</style>

<div class="container" dir="rtl">
    <div class="form-container">
        <h1 class="primary-color text-center mb-4">@ViewData["Title"]</h1>
        <h2 class="h5 text-muted text-center mb-4">الرجاء إدخال بريدك الإلكتروني</h2>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-4 position-relative">
                <input asp-for="Input.Email" class="form-control py-3"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="البريد الإلكتروني"
                       style="justify-content:start; direction:ltr;"
                       />
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <i class="fas fa-envelope input-icon"></i>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary py-3">
                إعادة تعيين كلمة المرور
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}